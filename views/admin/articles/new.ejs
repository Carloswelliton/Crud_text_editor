<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo Artigo</h2>
        </div>
        <div class="card-body">
            <form method="post" action="/articles/save">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" required><br>
                <textarea class="form-control" placeholder="Escreva o artigo aqui" name="body" id="article"></textarea>
                <label for="">Categoria</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) => {%>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select>
                <br>
                <button class="bt btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js" ></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: 
            'advlist autolink link image print lists preview hr searchplace wordcount fullscreen insertdatetime media save table paste emoticons',
        content_langs: [
            {title: "portuguese", code:"pt"}
        ],
        language: "pt_BR"
    });
</script>